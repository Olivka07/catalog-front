{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "react-jsx",
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "*": ["./src/*"]
        },
        "isolatedModules": true,
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "include": ["src"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
            "plugins": [
                {
                    "name": "typescript-plugin-css-modules"
                }
            ]
        }
    }
}
